<UserControl x:Class="Boutique.Views.DistributionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Boutique.Views"
             xmlns:vm="clr-namespace:Boutique.ViewModels"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:res="clr-namespace:Boutique.Resources"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:DistributionViewModel, IsDesignTimeCreatable=False}"
             x:Name="Root"
             d:DesignHeight="800"
             d:DesignWidth="1200">
  <Grid Margin="4,0,0,6">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- TabControl with Create, Containers, NPCs, and Outfits tabs -->
    <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}">

      <!-- CREATE TAB -->
      <TabItem Header="{lex:Loc Key={x:Static res:LocalizationKeys+Tabs.Create}}">
        <views:DistributionCreateTabView DataContext="{Binding EditTab}" />
      </TabItem>

      <!-- CONTAINERS TAB -->
      <TabItem Header="{lex:Loc Key={x:Static res:LocalizationKeys+Tabs.Containers}}">
        <views:DistributionContainersTabView DataContext="{Binding ContainersTab}" />
      </TabItem>

      <!-- NPCs TAB -->
      <TabItem Header="{lex:Loc Key={x:Static res:LocalizationKeys+Tabs.NPCs}}">
        <views:DistributionNpcsTabView DataContext="{Binding NpcsTab}" />
      </TabItem>

      <!-- OUTFITS TAB -->
      <TabItem Header="{lex:Loc Key={x:Static res:LocalizationKeys+Tabs.Outfits}}">
        <views:DistributionOutfitsTabView DataContext="{Binding OutfitsTab}" />
      </TabItem>
    </TabControl>

    <TextBlock Grid.Row="1"
               Margin="0,6,0,0"
               Text="{Binding StatusMessage}"
               FontStyle="Italic" />
  </Grid>
</UserControl>
