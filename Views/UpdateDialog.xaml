<Window x:Class="Boutique.Views.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Boutique.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=views:UpdateDialog}"
        Title="Update Available" Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        BorderThickness="0"
        Background="{DynamicResource Brush.Background}">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"
               Foreground="{DynamicResource Brush.TextPrimary}">
      <Run Text="A new version of Boutique is available!" />
    </TextBlock>

    <TextBlock Grid.Row="1" Margin="0,0,0,12" Foreground="{DynamicResource Brush.TextSecondary}">
      <Run Text="Current version: " />
      <Run Text="{Binding CurrentVersion}" FontWeight="SemiBold" />
      <Run Text="  â†’  " />
      <Run Text="Latest version: " />
      <Run Text="{Binding LatestVersion}" FontWeight="SemiBold" Foreground="#4EC9B0" />
    </TextBlock>

    <GroupBox Grid.Row="2" Header="What's New" Padding="8" Margin="0,0,0,12">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <TextBlock Text="{Binding ReleaseNotes}" TextWrapping="Wrap"
                   Foreground="{DynamicResource Brush.TextPrimary}"
                   FontFamily="Consolas" FontSize="12" />
      </ScrollViewer>
    </GroupBox>

    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Skip This Version" Click="Skip_Click" Padding="16,8" Margin="0,0,8,0" />
      <Button Content="Remind Me Later" Click="Later_Click" Padding="16,8" Margin="0,0,8,0" />
      <Button Content="Update Now" Click="Update_Click" Padding="16,8" IsDefault="True"
              Background="#0078D4" Foreground="White" />
    </StackPanel>
  </Grid>
</Window>
